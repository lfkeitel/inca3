{{define "partial-dev-info-form"}}
<form id="edit-form" class="{{if ne $.hidden "false"}}start-hidden{{end}}">
    <div class="form-group">
        <label for="device-name">Name</label>
        <input type="text" class="form-control" id="device-name">
    </div>
    <div class="form-group">
        <label for="device-addr">Address</label>
        <input type="text" class="form-control" id="device-addr">
    </div>
    <div class="form-group">
        <label for="device-type">Type</label>
        <select class="form-control" id="device-type"></select>
    </div>

    <div class="form-group">
        <button class="btn btn-success" type="button" id="save-create-btn">
            {{if eq $.mode "add"}}Create{{else}}Save{{end}}
        </button>
        <button class="btn btn-danger" type="button" id="cancel-edit-btn">Cancel</button>
    </div>
</form>
{{end}}