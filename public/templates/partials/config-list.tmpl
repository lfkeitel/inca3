{{define "partial-config-list"}}
    <div class="table-responsive">
        <table class="config-list table table-striped table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Compressed</th>
                    <th>Size</th>
                </tr>
            </thead>
            <tbody>
                {{range .configs}}
                <tr class="clickable-row" data-href="/devices/{{$.device.Slug}}/{{.Slug}}">
                    <td>{{.Created.Format "01/02/2006 15:03:04"}}</td>
                    <td>{{.Slug}}</td>
                    <td>{{.Compressed}}</td>
                    <td>{{formatFileSize .Size}}</td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </div>
{{end}}