{{define "partial-type-info-form"}}
<form id="edit-form" class="start-hidden">
    <div class="form-group">
        <label for="type-name">Name</label>
        <input type="text" class="form-control" id="type-name">
    </div>
    <div class="form-group">
        <label for="type-username">Username</label>
        <input type="text" class="form-control" id="type-username">
    </div>
    <div class="form-group">
        <label for="type-password">Password</label>
        <input type="password" class="form-control" id="type-password">
    </div>
    <div class="form-group">
        <label for="type-enablepw">Enable Password</label>
        <input type="password" class="form-control" id="type-enablepw">
    </div>
    <div class="form-group">
        <label for="type-script">Script</label>
        <select class="form-control" id="type-script"></select>
    </div>

    <div class="form-group">
        <button class="btn btn-success" type="button" id="save-create-btn">
            {{if eq . "add"}}Create{{else}}Save{{end}}
        </button>
        <button class="btn btn-danger" type="button" id="cancel-edit-btn">Cancel</button>
    </div>
</form>
{{end}}