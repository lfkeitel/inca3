{{define "device-list"}}
    {{template "header"}}

    {{template "vue-device-list"}}
    {{template "vue-dev-edit-form" "add"}}

    <div class="row clearfix">
        <div class="col-md-12 column" id="app">
            <div id="controls">
                <button v-on:click="addDevice" class="btn btn-primary">Add</button>
            </div>
            <device-list
                :table-data="tableData"
                :table-cols="tableColumns"
                v-if="section == 'devList'">
            </device-list>
            <device-edit-form v-if="section == 'deviceAdd'"></device-edit-form>
        </div>
    </div>

    {{template "footer" dict "e" $.e "js" (list "device-list")}}
{{end}}